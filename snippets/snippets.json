    "PlayFab Azure Function in new file (HTTP)": {
        "prefix": "pf-http-new",
        "body": [
            "using System.Threading.Tasks;",
            "using System.Net.Http;",
            "using Microsoft.AspNetCore.Http;",
            "using Microsoft.Azure.WebJobs;",
            "using Microsoft.Azure.WebJobs.Extensions.Http;",
            "using Microsoft.Extensions.Logging;\n",
            "namespace ${1:${TM_DIRECTORY/^.+\\\\(.*)$/$1/}}",
            "{",
            "\tpublic static class ${2:$TM_FILENAME_BASE}",
            "\t{",
            "\t\t[FunctionName(\"${3:$TM_FILENAME_BASE}\")]",
            "\t\tpublic static async Task<${4:returnType}> ${3:$TM_FILENAME_BASE}(",
            "\t\t\t[HttpTrigger(AuthorizationLevel.Function, \"post\", Route = ${5:null})] HttpRequestMessage req,",
            "\t\t\tILogger log)",
            "\t\t{",
            "\t\t\t$LINE_COMMENT Pre logic phase: Context extraction from request.",
            "\t\t\tvar context = PlayFab.CloudScriptModels.FunctionExecutionContext.Create<${6:functionArgumentsType}>(req);",
